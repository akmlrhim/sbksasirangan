<IfModule mod_rewrite.c>
    RewriteEngine On

    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]

    RewriteRule ^(\.env|composer\.lock|composer\.json|\.git|artisan|phpunit\.xml) - [F,L]
    
    RewriteRule ^(app|bootstrap|config|database|resources|routes|tests|vendor|node_modules|lang)/.*$ - [F,L]
</IfModule>

Options -Indexes